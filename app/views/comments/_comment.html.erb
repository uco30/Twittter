 <div class="">
	<article class="media">
	  <div class="media-content">
	    <div class="content">
	    <p>
	      <strong><%= comment.user.name %>: </strong>
	      <%= Rinku.auto_link(comment.body).html_safe %>
        </p>
	 </div>
	</div>
